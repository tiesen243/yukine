{
  "name": "yukine",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean:workspaces": "turbo run clean && git clean -xdf node_modules",
    "dev": "turbo dev --continue -F !@yukine/infra",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "infra:deploy": "turbo run deploy -F @yukine/infra",
    "infra:destroy": "turbo run destroy -F @yukine/infra",
    "infra:dev": "turbo dev --continue -F @yukine/infra",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3"
  },
  "packageManager": "bun@1.3.0",
  "catalogs": {
    "prod": {
      "@tanstack/react-query": "^5.90.20",
      "zod": "^4.3.6"
    },
    "dev": {
      "@types/node": "^25.2.0",
      "alchemy": "^0.83.2",
      "tsdown": "^0.20.1",
      "typescript": "^5.9.3"
    },
    "elysia": {
      "@elysiajs/cors": "^1.4.1",
      "@elysiajs/eden": "^1.4.6",
      "@elysiajs/openapi": "^1.4.13",
      "elysia": "^1.4.22"
    },
    "react": {
      "@types/react": "^19.2.11",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.4",
      "react-dom": "^19.2.4"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.18",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.1.18",
      "uniwind": "^1.2.4"
    }
  }
}
